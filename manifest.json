{
  "manifest_version": 2,
  "name": "Page Summarizer",
  "version": "1.0",
  "description": "Summarize web pages using OpenAI API",
  "permissions": ["activeTab", "storage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "options_page": "config.html",
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png",
    "default_width": 400,
    "default_height": 600
  },
  "icons": {
    "16": "icon_16.png",
    "48": "icon_48.png",
    "128": "icon_128.png"
  }
}
